@import "../../font/iconfont.wxss";

.about-warp {
  width: 100%;
}

.iconfont {
  font-size: 40rpx;
  color: #999;
}

.about-warp .logo-warp {
  border-bottom: 1px dashed #dadada;
}

.about-warp .logo-warp .logo {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.contact {
  margin-top: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
  width: 90%;
}

.contact .text {
  font-size: 36rpx;
  color: #fff;
}

.contact::after {
  border: none;
}

.contact .wx-logo {
  width: 50rpx;
  height: 50rpx;
}

.about-warp .nav-warp {
  font-size: 32rpx;
}

.about-warp .nav-warp .nav-item .left {
  display: flex;
  align-items: center;
}

.about-warp .nav-warp .nav-item .left .icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

/* pages/smallRoutine/smallRoutine.wxss */

.small {
  width: 100%;
  height: 100vh;
}

.zhe {
  width: 100%;
  height: 100vh;
  position: absolute;
  z-index: 1;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.3);
}

.smallRoutine {
  overflow: hidden;
  z-index: 2;
  box-shadow: 1px 1px 8px rgb(107, 106, 106);
  width: 90%;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 20rpx;
  margin: 60rpx auto 0;
  /* position: absolute; */
}

.header {
  margin: 30rpx 0 20rpx;
}

.body {
  width: 100%;
  overflow: hidden;
}

.input {
  width: 60%;
  padding: 10rpx 20rpx;
  border: 1px solid #666;
  background: #fff;
  border-radius: 10rpx;
}

.left {
  width: 15%;
  letter-spacing: 2px;
  margin-left: 50rpx;
}

.disHeader {
  background: rgba(255, 255, 255, 0.3);
  margin: 40rpx 0 10rpx;
  width: 60%;
  border: 1px solid #333;
  font-size: 32rpx;
  color: #333;
  padding: 35rpx;
  line-height: 0;
}

.call {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  right: 8%;
  top: 420rpx;
  z-index: 3;
}
