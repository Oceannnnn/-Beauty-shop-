/* pages/home/home.wxss */

.main_header {
  letter-spacing: 2px;
  text-align: center;
  position: relative;
}

.main_header swiper {
  height: 350rpx;
  width: 100%;
}

.main_header swiper image {
  width: 100%;
  height: 100%;
}

.home_info {
  position: absolute;
  top: 20%;
}

.home_info.right {
  right: 10%;
}

.home_info.left {
  left: 10%;
}

.home_img {
  display: block;
}

.home_text {
  letter-spacing: 1px;
}

.home_text.on {
  color: #f4020a;
}

.miao {
  background: #0ea7f7;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}

.pin {
  padding: 5rpx 18rpx;
  border-radius: 10rpx;
  color: #f4020a;
  border: 1px solid #f4020a;
}

.home_icon {
  width: 90rpx;
  height: 90rpx;
}
.home_more{
  background: #AAAAAA;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}